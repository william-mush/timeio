generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?   // Hashed password for credentials auth
  image         String?
  phoneNumber   String?   // For SMS notifications or auth
  smsEnabled    Boolean   @default(false)
  
  accounts      Account[]
  sessions      Session[]
  alarms        Alarm[]
  archivedAlarms ArchivedAlarm[]
  timezone      String    @default("UTC")
  timeZones     UserTimeZone[]
  settings      UserSettings?
  pushSubscriptions PushSubscription[]
  createdAt     DateTime  @default(now())
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Alarm {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  hours         Int
  minutes       Int
  label         String?
  sound         String
  isEnabled     Boolean   @default(true)
  repeatDays    Int[]     // 0-6 for Sunday-Saturday
  timezone      String    @default("UTC")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastTriggered DateTime?
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model ArchivedAlarm {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  hours         Int
  minutes       Int
  label         String?
  sound         String
  repeatDays    Int[]     // 0-6 for Sunday-Saturday
  createdAt     DateTime  // When the original alarm was created
  archivedAt    DateTime  @default(now())
  lastTriggered DateTime?
  reason        String    // Why the alarm was archived (e.g., "deleted", "replaced")
}

model UserTimeZone {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cityId    String   // References the city ID from the CITIES data
  cityName  String   // Store the city name for quick access
  country   String   // Store the country for quick access
  offset    Float    // Store the UTC offset
  region    String   // Store the geographical region
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  order     Int      @default(0)  // For custom ordering

  @@unique([userId, cityId])
  @@index([userId, order])
}

model UserSettings {
  id            String   @id @default(cuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  format24Hour  Boolean  @default(false)
  showSeconds   Boolean  @default(true)
  showMilliseconds Boolean @default(false)
  timeZone      String   @default("UTC")
  dateFormat    String   @default("MM/dd/yyyy")
  defaultClockCount Int  @default(3)
  sortOrder     String   @default("timezone") // 'name' | 'timezone' | 'added'
  theme         String   @default("light")    // 'light' | 'dark' | 'system'
  clockStyle    String   @default("digital")  // 'digital' | 'analog' | 'both'
  colorScheme   String   @default("blue")     // 'blue' | 'purple' | 'green' | 'orange'
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Auth Analytics - Track authentication events for monitoring
model AuthEvent {
  id        String   @id @default(cuid())
  type      String   // 'signin_success', 'signin_failure', 'signout', 'signup'
  provider  String?  // 'google', 'email', etc.
  userId    String?  // null if failed/unknown
  email     String?  // for tracking even on failure
  errorCode String?  // 'OAuthSignin', 'OAuthCallback', etc.
  errorMsg  String?  // Additional error details
  userAgent String?  // Browser/device info
  ipAddress String?  // Client IP (hashed or anonymized if needed)
  country   String?  // Geo location from IP
  createdAt DateTime @default(now())

  @@index([type, createdAt])
  @@index([userId, createdAt])
  @@index([createdAt])
}

// GeoNames Cities - 11M+ places worldwide
model GeoCity {
  geonameid   Int      @id                    // GeoNames ID (primary key)
  name        String                          // UTF-8 city name (e.g., "東京")
  asciiName   String                          // ASCII name (e.g., "Tokyo")
  countryCode String   @db.Char(2)            // ISO-3166 2-letter code
  country     String                          // Full country name
  timezone    String                          // IANA timezone (e.g., "Asia/Tokyo")
  latitude    Float
  longitude   Float
  population  Int      @default(0)
  continent   String                          // Asia, Europe, etc.
  featureCode String?  @db.VarChar(10)        // GeoNames feature code (PPL, PPLA, etc.)
  admin1      String?                         // State/Province code
  elevation   Int?                            // Elevation in meters
  
  // Indexes for fast searching
  @@index([asciiName])                        // Primary search index
  @@index([countryCode])                      // Filter by country
  @@index([population(sort: Desc)])           // Sort by popularity
  @@index([continent])                        // Filter by continent
  @@index([timezone])                         // Filter by timezone
  
  @@map("geo_cities")                         // Table name in PostgreSQL
}
